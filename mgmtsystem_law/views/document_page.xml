<odoo>
    <data>
        <record id="view_wiki_form" model="ir.ui.view">
            <field name="name">document.page.form.inherrit</field>
            <field name="model">document.page</field>
            <field name="inherit_id" ref="document_page.view_wiki_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <page name="info" position="after">
                    <page name="laws" string="Laws" attrs="{'invisible': [('parent_id','!=',%(mgmtsystem_manual.manuals)d)]}">
                        <field name="document_law_ids">
                            <tree editable="bottom" string="Laws">
                                <field name="document_law_id"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_wiki_tree" model="ir.ui.view">
            <field name="name">document.page.tree.inherrit</field>
            <field name="model">document.page</field>
            <field name="inherit_id" ref="document_page.view_wiki_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="content_date" position="after">
                    <field name="document_law_ids" widget="many2many_tags" optional="hide"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
